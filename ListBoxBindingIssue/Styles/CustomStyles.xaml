<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="GreenForeground" Color="#FF20BE00"/>
    <SolidColorBrush x:Key="RedForeground" Color="Red"/>

    <Style x:Key="ResetLabelStyle" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{x:Null}" />
        <Setter Property="Background" Value="{x:Null}" />
    </Style>

    <Style x:Key="CustomStaticLabelStyle" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{StaticResource GreenForeground}" />
    </Style>

    <Style x:Key="CustomDynamicLabelStyle" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{DynamicResource GreenForeground}" />
    </Style>

</ResourceDictionary>