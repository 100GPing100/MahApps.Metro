                    <GridViewColumn Header="Item47" DisplayMemberBinding="{Binding Item47}" />
                    <GridViewColumn Header="Item48" DisplayMemberBinding="{Binding Item48}" />
                    <GridViewColumn Header="Item49" DisplayMemberBinding="{Binding Item49}" />
                    <GridViewColumn Header="Item50" DisplayMemberBinding="{Binding Item50}" />

                </GridView>
            </ListView.View>
        </ListView>
        <controls:ProgressRing x:Name="progress" 
                               Height="100"
                               Width="100"
                               IsActive="True"
                               Foreground="Red" />
    </Grid>
</Window>
