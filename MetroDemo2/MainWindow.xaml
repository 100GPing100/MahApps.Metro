                    <GridViewColumn Header="Item27" DisplayMemberBinding="{Binding Item27}" />
                    <GridViewColumn Header="Item28" DisplayMemberBinding="{Binding Item28}" />
                    <GridViewColumn Header="Item29" DisplayMemberBinding="{Binding Item29}" />
                    <GridViewColumn Header="Item30" DisplayMemberBinding="{Binding Item30}" />

                    <GridViewColumn Header="Item31" DisplayMemberBinding="{Binding Item31}" />
                    <GridViewColumn Header="Item32" DisplayMemberBinding="{Binding Item32}" />
                    <GridViewColumn Header="Item33" DisplayMemberBinding="{Binding Item33}" />
                    <GridViewColumn Header="Item34" DisplayMemberBinding="{Binding Item34}" />
                    <GridViewColumn Header="Item35" DisplayMemberBinding="{Binding Item35}" />
                    <GridViewColumn Header="Item36" DisplayMemberBinding="{Binding Item36}" />
