                    <GridViewColumn Header="Item8" DisplayMemberBinding="{Binding Item8}" />
                    <GridViewColumn Header="Item9" DisplayMemberBinding="{Binding Item9}" />
                    <GridViewColumn Header="Item10" DisplayMemberBinding="{Binding Item10}" />
                    
                    <GridViewColumn Header="Item11" DisplayMemberBinding="{Binding Item11}" />
                    <GridViewColumn Header="Item12" DisplayMemberBinding="{Binding Item12}" />
                    <GridViewColumn Header="Item13" DisplayMemberBinding="{Binding Item13}" />
                    <GridViewColumn Header="Item14" DisplayMemberBinding="{Binding Item14}" />
                    <GridViewColumn Header="Item15" DisplayMemberBinding="{Binding Item15}" />
                    <GridViewColumn Header="Item16" DisplayMemberBinding="{Binding Item16}" />
                    <GridViewColumn Header="Item17" DisplayMemberBinding="{Binding Item17}" />
                    <GridViewColumn Header="Item18" DisplayMemberBinding="{Binding Item18}" />
                    <GridViewColumn Header="Item19" DisplayMemberBinding="{Binding Item19}" />
                    <GridViewColumn Header="Item20" DisplayMemberBinding="{Binding Item20}" />

                    <GridViewColumn Header="Item21" DisplayMemberBinding="{Binding Item21}" />
                    <GridViewColumn Header="Item22" DisplayMemberBinding="{Binding Item22}" />
                    <GridViewColumn Header="Item23" DisplayMemberBinding="{Binding Item23}" />
